<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/bluish</item>
        <item name="android:textColorHighlight">@color/bluish</item>
        <item name="android:textColorPrimary">@color/bluish</item>
        <item name="android:titleTextColor">@color/bluish</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grayishTextColor</item>
        <item name="colorControlActivated">@color/solidYellowColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="TextViewBold">
    <item name="android:textStyle">bold</item>
</style>
    <style name="TextViewLight">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="inviteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="overfolowText">
        <item name="android:textColor">@color/bootstrap_brand_danger</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#fff</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/bluish</item>
        <item name="android:actionOverflowButtonStyle">@color/bluish</item>
        <item name="android:tint">@color/bluish</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/bluish</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/bluish</item>

    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bluish</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <!--<item name="tabPaddingStart">6dp</item>-->
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grayishTextColor</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
